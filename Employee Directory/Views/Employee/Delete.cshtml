@model Employee_Directory.Models.Employee

@{
    ViewData["Title"] = "Delete Employee";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-header bg-danger text-white">
                <h3 class="card-title mb-0">
                    <i class="fas fa-trash me-2"></i>Delete Employee
                </h3>
            </div>
            <div class="card-body p-4">
                <div class="alert alert-warning" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <strong>Are you sure you want to delete this employee?</strong>
                    <br />
                    This action cannot be undone.
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">
                                <i class="fas fa-user me-2 text-primary"></i>Full Name
                            </label>
                            <p class="form-control-plaintext">@Model.FullName</p>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">
                                <i class="fas fa-envelope me-2 text-primary"></i>Email
                            </label>
                            <p class="form-control-plaintext">@Model.Email</p>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">
                                <i class="fas fa-briefcase me-2 text-primary"></i>Position
                            </label>
                            <p class="form-control-plaintext">
                                <span class="badge bg-primary fs-6">@Model.Position</span>
                            </p>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">
                                <i class="fas fa-building me-2 text-primary"></i>Department
                            </label>
                            <p class="form-control-plaintext">
                                <span class="badge bg-secondary fs-6">@Model.Department</span>
                            </p>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">
                                <i class="fas fa-phone me-2 text-primary"></i>Phone
                            </label>
                            <p class="form-control-plaintext">@Model.Phone</p>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">
                                <i class="fas fa-calendar me-2 text-primary"></i>Hire Date
                            </label>
                            <p class="form-control-plaintext">
                                @Model.HireDate.ToString("MMMM dd, yyyy")
                                <br />
                                <small class="text-muted">@Model.YearsOfService years of service</small>
                            </p>
                        </div>
                    </div>
                </div>

                <hr />

                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <a asp-action="Index" class="btn btn-secondary me-md-2">
                        <i class="fas fa-arrow-left me-2"></i>Cancel
                    </a>
                    <form asp-action="Delete" method="post" class="d-inline">
                        <input type="hidden" asp-for="EmployeeId" />
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this employee?')">
                            <i class="fas fa-trash me-2"></i>Delete Employee
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
