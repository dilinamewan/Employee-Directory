@model Employee_Directory.Models.Employee

@{
    ViewData["Title"] = "Employee Details";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-header bg-info text-white">
                <h3 class="card-title mb-0">
                    <i class="fas fa-user me-2"></i>Employee Details
                </h3>
            </div>
            <div class="card-body p-4">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">
                                <i class="fas fa-user me-2 text-primary"></i>Full Name
                            </label>
                            <p class="form-control-plaintext">@Model.FullName</p>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">
                                <i class="fas fa-envelope me-2 text-primary"></i>Email
                            </label>
                            <p class="form-control-plaintext">
                                <a href="mailto:@Model.Email" class="text-decoration-none">@Model.Email</a>
                            </p>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">
                                <i class="fas fa-briefcase me-2 text-primary"></i>Position
                            </label>
                            <p class="form-control-plaintext">
                                <span class="badge bg-primary fs-6">@Model.Position</span>
                            </p>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">
                                <i class="fas fa-building me-2 text-primary"></i>Department
                            </label>
                            <p class="form-control-plaintext">
                                <span class="badge bg-secondary fs-6">@Model.Department</span>
                            </p>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">
                                <i class="fas fa-phone me-2 text-primary"></i>Phone
                            </label>
                            <p class="form-control-plaintext">
                                <a href="tel:@Model.Phone" class="text-decoration-none">@Model.Phone</a>
                            </p>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">
                                <i class="fas fa-calendar me-2 text-primary"></i>Hire Date
                            </label>
                            <p class="form-control-plaintext">
                                @Model.HireDate.ToString("MMMM dd, yyyy")
                                <br />
                                <small class="text-muted">@Model.YearsOfService years of service</small>
                            </p>
                        </div>
                    </div>
                </div>

                <hr />

                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <a asp-action="Index" class="btn btn-secondary me-md-2">
                        <i class="fas fa-arrow-left me-2"></i>Back to List
                    </a>
                    <a asp-action="Edit" asp-route-id="@Model.EmployeeId" class="btn btn-warning me-md-2">
                        <i class="fas fa-edit me-2"></i>Edit
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.EmployeeId" class="btn btn-danger">
                        <i class="fas fa-trash me-2"></i>Delete
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
