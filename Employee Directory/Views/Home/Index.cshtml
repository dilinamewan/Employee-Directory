@{
    ViewData["Title"] = "Home";
}

<div class="hero-section">
    <div class="container">
        <div class="row align-items-center min-vh-50">
            <div class="col-lg-6 mb-5 mb-lg-0">
                <div class="hero-content fade-in">
                    <h1 class="display-4 fw-bold mb-4">
                        Welcome to <span class="text-primary">Employee Directory</span>
                    </h1>
                    <p class="lead mb-4 text-muted">
                        A comprehensive employee management system built with ASP.NET Core MVC.
                        Manage your workforce efficiently with our modern, intuitive interface.
                    </p>
                    <div class="d-flex gap-3 flex-wrap">
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <a href="@Url.Action("Index", "Employee")" class="btn btn-primary btn-lg">
                                <i class="fas fa-users me-2"></i>
                                Browse Employees
                            </a>
                            <a href="@Url.Action("Create", "Employee")" class="btn btn-outline-primary btn-lg">
                                <i class="fas fa-plus me-2"></i>
                                Add New Employee
                            </a>
                        }
                        else
                        {
                            <a href="@Url.Action("Login", "Account")" class="btn btn-primary btn-lg">
                                <i class="fas fa-sign-in-alt me-2"></i>
                                Login
                            </a>
                            <a href="@Url.Action("Register", "Account")" class="btn btn-outline-primary btn-lg">
                                <i class="fas fa-user-plus me-2"></i>
                                Register
                            </a>
                        }
                    </div>
                    @if (User.Identity != null && !User.Identity.IsAuthenticated)
                    {
                        <div class="mt-4">
                            <p class="text-muted">Please login to access the employee directory</p>
                        </div>
                    }
                </div>
            </div>
            <div class="col-lg-6">
                <div class="hero-image slide-up">
                    <div class="stats-card">
                        <div class="row g-4">
                            <div class="col-md-6">
                                <div class="stat-item">
                                    <div class="stat-icon bg-primary">
                                        <i class="fas fa-users"></i>
                                    </div>
                                    <div class="stat-content">
                                        <h3 class="stat-number">@(ViewBag.TotalEmployees ?? 0)</h3>
                                        <p class="stat-label">Total Employees</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="stat-item">
                                    <div class="stat-icon bg-success">
                                        <i class="fas fa-building"></i>
                                    </div>
                                    <div class="stat-content">
                                        <h3 class="stat-number">@(ViewBag.TotalDepartments ?? 0)</h3>
                                        <p class="stat-label">Departments</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="features-section py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center mb-5">
                <h2 class="display-6 fw-bold mb-3">Powerful Features</h2>
                <p class="lead text-muted">
                    Everything you need to manage your employee directory efficiently and effectively.
                </p>
            </div>
        </div>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="feature-card h-100">
                    <div class="feature-icon">
                        <i class="fas fa-search"></i>
                    </div>
                    <h4 class="fw-semibold mb-3">Advanced Search</h4>
                    <p class="text-muted">
                        Quickly find employees by name, department, or position with our powerful search functionality.
                    </p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card h-100">
                    <div class="feature-icon">
                        <i class="fas fa-edit"></i>
                    </div>
                    <h4 class="fw-semibold mb-3">Easy Management</h4>
                    <p class="text-muted">
                        Add, edit, and delete employee records with our intuitive interface and validation.
                    </p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card h-100">
                    <div class="feature-icon">
                        <i class="fas fa-mobile-alt"></i>
                    </div>
                    <h4 class="fw-semibold mb-3">Mobile Responsive</h4>
                    <p class="text-muted">
                        Access the employee directory from any device with our fully responsive design.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@if (User.Identity != null && User.Identity.IsAuthenticated)
{
    <div class="cta-section py-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 mx-auto text-center">
                    <div class="cta-content">
                        <h2 class="display-6 fw-bold text-white mb-3">Ready to Get Started?</h2>
                        <p class="lead text-white mb-4">
                            Start managing your employee directory today with our comprehensive management system.
                        </p>
                        <a href="@Url.Action("Index", "Employee")" class="btn btn-light btn-lg">
                            <i class="fas fa-rocket me-2"></i>
                            Get Started Now
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<style>
    .hero-section {
        padding: 3rem 0;
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    }

    .min-vh-50 {
        min-height: 50vh;
    }

    .hero-content h1 {
        color: var(--dark-text);
    }

    .stats-card {
        background: white;
        border-radius: var(--border-radius-lg);
        padding: 2rem;
        box-shadow: var(--shadow-md);
        border: 1px solid var(--border-color);
    }

    .stat-item {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .stat-icon {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.25rem;
    }

    .stat-number {
        font-size: 1.75rem;
        font-weight: 600;
        color: var(--dark-text);
        margin-bottom: 0;
    }

    .stat-label {
        color: var(--light-text);
        font-size: 0.875rem;
        margin-bottom: 0;
    }

    .features-section {
        background: white;
    }

    .feature-card {
        padding: 2rem;
        border-radius: var(--border-radius-lg);
        text-align: center;
        background: white;
        border: 1px solid var(--border-color);
        transition: var(--transition);
    }

        .feature-card:hover {
            box-shadow: var(--shadow-md);
            transform: translateY(-3px);
        }

    .feature-icon {
        width: 70px;
        height: 70px;
        border-radius: 50%;
        background: var(--primary-color);
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1.5rem;
        color: white;
        font-size: 1.5rem;
    }

    .cta-section {
        background: var(--primary-color);
        color: white;
    }

    .cta-content {
        padding: 2rem;
    }

    .btn-light {
        background: white;
        color: var(--primary-color);
        border: 1px solid white;
        font-weight: 500;
    }

        .btn-light:hover {
            background: #f8f9fa;
            color: var(--primary-dark);
            transform: translateY(-1px);
        }
</style>
