@{
    ViewData["Title"] = "Dashboard - Employee Directory";
}

<div class="hero-section">
    <div class="container">
        <div class="row align-items-center min-vh-60">
            <div class="col-lg-6 mb-5 mb-lg-0">
                <div class="hero-content">
                    <h1 class="display-4 fw-bold mb-4">
                        <span class="text-primary">Employee Directory</span>
                    </h1>
                    <div class="d-flex gap-3 flex-wrap">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <a href="@Url.Action("Index", "Employee")" class="btn btn-primary btn-lg">
                                <i class="fas fa-users me-2"></i>View Employees
                            </a>
                            <a href="@Url.Action("Create", "Employee")" class="btn btn-outline-primary btn-lg">
                                <i class="fas fa-plus me-2"></i>Add Employee
                            </a>
                        }
                        else
                        {
                            <a href="@Url.Action("Login", "Account")" class="btn btn-primary btn-lg">
                                <i class="fas fa-sign-in-alt me-2"></i>Login
                            </a>
                            <a href="@Url.Action("Register", "Account")" class="btn btn-outline-primary btn-lg">
                                <i class="fas fa-user-plus me-2"></i>Register
                            </a>
                        }
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="stats-showcase">
                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="stat-card stat-primary">
                                <div class="stat-icon">
                                    <i class="fas fa-users"></i>
                                </div>
                                <div class="stat-content">
                                    <h3 class="stat-number">@(ViewBag.TotalEmployees ?? 0)</h3>
                                    <p class="stat-label">Total Employees</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="stat-card stat-success">
                                <div class="stat-icon">
                                    <i class="fas fa-building"></i>
                                </div>
                                <div class="stat-content">
                                    <h3 class="stat-number">@(ViewBag.TotalDepartments ?? 0)</h3>
                                    <p class="stat-label">Departments</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@if (User.Identity?.IsAuthenticated == true)
{
    <!-- Quick Actions Dashboard -->
    <div class="dashboard-section py-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 mx-auto text-center mb-5">
                    <h2 class="display-6 fw-bold mb-3">Quick Actions</h2>
                </div>
            </div>
            <div class="row g-4">
                <div class="col-md-4">
                    <a href="@Url.Action("Create", "Employee")" class="quick-action-card">
                        <div class="action-icon bg-primary">
                            <i class="fas fa-plus"></i>
                        </div>
                        <h5 class="action-title">Add Employee</h5>
                        <p class="action-description">Add new team member</p>
                    </a>
                </div>
                <div class="col-md-4">
                    <a href="@Url.Action("Index", "Employee")" class="quick-action-card">
                        <div class="action-icon bg-success">
                            <i class="fas fa-list"></i>
                        </div>
                        <h5 class="action-title">View All</h5>
                        <p class="action-description">Browse employee list</p>
                    </a>
                </div>
                <div class="col-md-4">
                    <a href="@Url.Action("Index", "Employee", new { searchTerm = "" })" class="quick-action-card">
                        <div class="action-icon bg-warning">
                            <i class="fas fa-search"></i>
                        </div>
                        <h5 class="action-title">Search</h5>
                        <p class="action-description">Find employees</p>
                    </a>
                </div>
            </div>
        </div>
    </div>
}

<style>
    :root {
        --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        --success-gradient: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
        --warning-gradient: linear-gradient(135deg, #fcb045 0%, #fd1d1d 100%);
        --info-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        --shadow-soft: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        --shadow-medium: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        --border-radius: 0.75rem;
        --transition: all 0.3s ease;
    }

    body {
        background-color: #f8fafc;
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
    }

    /* Hero Section */
    .hero-section {
        padding: 4rem 0;
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        position: relative;
    }

    .min-vh-60 {
        min-height: 60vh;
    }

    .hero-content h1 {
        color: #1e293b;
    }

    /* Stats Showcase */
    .stats-showcase {
        margin-top: 2rem;
    }

    .stat-card {
        background: white;
        border-radius: var(--border-radius);
        padding: 2rem;
        box-shadow: var(--shadow-soft);
        border: 1px solid #e2e8f0;
        transition: var(--transition);
        text-align: center;
        position: relative;
        overflow: hidden;
    }

    .stat-card:hover {
        transform: translateY(-4px);
        box-shadow: var(--shadow-medium);
    }

    .stat-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 4px;
        background: var(--primary-gradient);
    }

    .stat-card.stat-success::before {
        background: var(--success-gradient);
    }

    .stat-icon {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.5rem;
        margin: 0 auto 1rem;
        background: var(--primary-gradient);
    }

    .stat-card.stat-success .stat-icon {
        background: var(--success-gradient);
    }

    .stat-number {
        font-size: 2.5rem;
        font-weight: 700;
        color: #1e293b;
        margin-bottom: 0.5rem;
        line-height: 1;
    }

    .stat-label {
        color: #64748b;
        font-size: 1rem;
        font-weight: 500;
        margin-bottom: 0;
    }

    /* Features Section - Removed */

    /* Dashboard Section */
    .dashboard-section {
        background: #f8fafc;
    }

    .quick-action-card {
        display: block;
        padding: 2rem;
        background: white;
        border: 1px solid #e2e8f0;
        border-radius: var(--border-radius);
        text-decoration: none;
        transition: var(--transition);
        color: inherit;
        text-align: center;
        height: 100%;
    }

    .quick-action-card:hover {
        transform: translateY(-4px);
        box-shadow: var(--shadow-medium);
        text-decoration: none;
        color: inherit;
    }

    .action-icon {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        margin: 0 auto 1rem;
        font-size: 1.5rem;
    }

    .action-title {
        font-weight: 600;
        color: #1e293b;
        margin-bottom: 0.5rem;
        font-size: 1.125rem;
    }

    .action-description {
        color: #64748b;
        font-size: 0.875rem;
        margin-bottom: 0;
    }

    /* Call to Action - Removed */

    /* Button Enhancements */
    .btn {
        border-radius: 0.5rem;
        font-weight: 500;
        transition: var(--transition);
        border: none;
        padding: 0.75rem 1.5rem;
    }

    .btn-primary {
        background: var(--primary-gradient);
        box-shadow: var(--shadow-soft);
    }

    .btn-primary:hover {
        transform: translateY(-1px);
        box-shadow: var(--shadow-medium);
    }

    .btn-outline-primary {
        border: 2px solid #3b82f6;
        color: #3b82f6;
        background: transparent;
    }

    .btn-outline-primary:hover {
        background: #3b82f6;
        transform: translateY(-1px);
        box-shadow: var(--shadow-soft);
    }

    .btn-light {
        background: white;
        color: #1e293b;
        box-shadow: var(--shadow-soft);
    }

    .btn-light:hover {
        background: #f8f9fa;
        color: #1e293b;
        transform: translateY(-1px);
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .hero-section {
            padding: 2rem 0;
        }
        
        .stat-card {
            padding: 1.5rem;
        }
        
        .feature-card,
        .quick-action-card {
            padding: 1.5rem;
        }
        
        .stats-showcase {
            margin-top: 1rem;
        }
    }

    /* Animation Classes */
    .fade-in {
        animation: fadeIn 0.6s ease-out;
    }

    @@keyframes fadeIn {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }
</style>
